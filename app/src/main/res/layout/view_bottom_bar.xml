<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="#212122"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_5">

    <LinearLayout
        android:id="@+id/item_1"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:clickable="false"
            android:src="@drawable/ic_home_tab"
            app:tint="@color/colorAccent" />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:visibility="gone"
            android:id="@+id/label_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_home"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_2"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:clickable="false"
            android:src="@drawable/round_drafts_black_48dp"
            app:tint="@color/colorBarDefault" />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:visibility="gone"
            android:id="@+id/label_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/draft"
            android:textColor="@color/colorBarDefault"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_3"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:clickable="false"
            android:src="@drawable/round_favorite_black_48dp"
            app:tint="@color/colorBarDefault" />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:visibility="gone"
            android:id="@+id/label_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_favourites"
            android:textColor="@color/colorBarDefault"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_4"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/round_settings_black_48dp"
            app:tint="@color/colorBarDefault" />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:visibility="gone"
            android:id="@+id/label_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_settings"
            android:textColor="@color/colorBarDefault"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>